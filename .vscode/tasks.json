{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SDL2",
            "type": "shell",
            "command": "gcc",
            "args": [
                "engine/src/*.c",
                "-Iengine/include",
                "-lSDL2",
                "-lSDL2_ttf",
                "-o",
                "build/main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}