{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Engine",
            "type": "shell",
            "command": "gcc",
            "args": [
                "engine/src/*.c",
                "-Iengine/include",
                "-lSDL2",
                "-lSDL2_ttf",
                "-lSDL2_image",
                "-o",
                "build/engine_main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Editor",
            "type": "shell",
            "command": "gcc",
            "args": [
                "editor/src/*.c",
                "-Ieditor/include",
                "-I/usr/local/include",
                "-L/usr/local/lib",
                "-lraylib",
                "-lGL",
                "-lm",
                "-lpthread",
                "-ldl",
                "-lrt",
                "-lX11",
                "-o",
                "build/editor_main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Engine (Windows)",
            "type": "shell",
            "command": "bash",
            "args": [
                "scripts/build_engine_win.sh"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Editor (Windows)",
            "type": "shell",
            "command": "bash",
            "args": [
                "scripts/build_editor_win.sh"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Setup Windows Dependencies",
            "type": "shell",
            "command": "bash",
            "args": [
                "scripts/setup_win_deps.sh"
            ],
            "group": "none",
            "problemMatcher": []
        }
    ]
}